<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @user do |f| %>
        <div class="col-12 col-md-12">
           <div class="form-group">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_area :introduction, class: "form-control", rows: "10" %>
          </div>
          <div class="form-group">
            <%= image_tag @user.avatar, class:"user-avatar img-responsive" if @user.avatar?%>
             <%= f.file_field :avatar %>
          </div>
        </div>
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div> 