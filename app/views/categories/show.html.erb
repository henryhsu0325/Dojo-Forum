<div class="post-index" >
  <div class="col-md-12">
    <h1>Dojo Forum</h1>          
  </div>
</div>

<div class="container">
  <div class="row">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item"><%= link_to "All", root_path, class: "nav-link" %></li>
      <% @categories.each do |category| %>
      <li role="presentation" class="<%= "active" if category == @category %>">
        <%= link_to category.name, category_path(category) %>
      </li>
      <% end %>
    </ul>  
    <br>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col"><%= link_to 'Replies count', category_path( :order => "replies_count") %></th>
          <th scope="col">Title</th>
          <th scope="col"><%= link_to 'Last replied at', category_path( :order => "last_replied_at") %></th>
          <th scope="col"><%= link_to 'Viewed count', category_path( :order => "vieweds_count") %></th>
        </tr>
      </thead>
    </table>
    <%= render partial: "shared/post_list" %>
  </div>
</div>