<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar " style="background-color: #dbeda9;">
      <div class="container-fluid">
        <%= link_to "首頁", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to('All Post', root_path, class: "nav-link") %></li>
          <br>
          <li class="nav-item"><%= link_to('New Post', new_post_path, class: "nav-link") %></li>
        </ul>
        <ul class="pull-right text-right nav navbar-nav">
        <% if current_user %>
        Hi, <%= current_user.email %>
        <% if current_user.admin? %>
          <li><%= link_to 'Admin後台', admin_users_path %></li>
        <% end %>
        <%= link_to('Log out', destroy_user_session_path, method: :delete) %> |
        <%= link_to('修改密碼', edit_user_registration_path) %>
        <% else %>
        <%= link_to('Sign up', new_user_registration_path) %> |
        <%= link_to('Log in', new_user_session_path) %>
        <% end %>
      </ul>
    </div>
    </nav>

    <% if flash[:notice] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
      </div>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </div>
      </div>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
