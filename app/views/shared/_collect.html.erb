<% if @post.collected?(current_user) %>
  <%= link_to 'Uncollect', uncollect_post_path(@post), method: :post, class: "btn btn-warning btn-sm collect-btn float-right", remote: true %>
<% else %>
  <%= link_to 'Collect', collect_post_path(@post), method: :post, class: "btn btn-primary btn-sm collect-btn float-right", remote: true %>
<% end %>