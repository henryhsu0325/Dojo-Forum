<div class="post-index">
  <div class="col-md-12">
    <h1>Dojo Forum</h1>
  </div>       
</div>

<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Replies count</th>
          <th scope="col">Title</th>
          <th scope="col">Last replied at</th>
          <th scope="col">Viewed count</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.replies_count %></th>
          <td><%= post.title %></td>
          <td><%= post.replies.last.created_at %></td>
          <td<%= post.viewed_count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>