<div class="container">
  <div class="row">
    <div class="admin-head col-md-12">
      <div class="head-title p-5">
      </div>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control", rows: "10" %>
        </div>

        <div class="form-group">
          <%= image_tag @post.image, width: '200px' if @post.image? %>
          <%= f.file_field :image %>
        </div>

         Who Can See：
        <div class="check-inline">
          <%= f.radio_button :permit, "all", :checked => true, class: "input" %>
          <label class="check-label">All</label>
        </div>
        <div class="check-inline">
          <%= f.radio_button :permit, "friend", class: "input" %>
          <label class="check-label">Friend</label>
        </div>
        <div class="check-inlinee">
          <%= f.radio_button :permit, "myself", class: "input"  %>
          <label class="check-label">Myself</label>
        </div> 
        <br/>

        Category：
        <% @categories.each do |category| %>
          <%= fields_for category do |f| %>
          <div class="check-inline">
            <%= f.check_box :category_of_post_ids %>
            <label class="check-label"><%= category.name %></label>
          </div>
          <% end %>
        <% end %>
        <br/> 

        Status：
        <div class="form-group">
          <%= f.submit "Save Draft" %>
          <%= f.submit "Submit" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>