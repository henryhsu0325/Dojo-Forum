<div class="container">
  <div class="row">
    <div class="admin-head col-md-12">
      <div class="head-title p-5">
      </div>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control", rows: "10" %>
        </div>

        <div class="form-group">
          <%= image_tag @post.image, width: '200px' if @post.image? %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.submit "Save Draft" %>
          <%= f.submit "Submit" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>