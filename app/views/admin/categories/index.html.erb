<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div>
        <%= link_to 'Category List', admin_categories_path, class: "btn btn-default btn-xs" %> |
        <%= link_to 'User List', admin_users_path, class: "btn btn-default btn-xs" %>
      </div>
      <br>

      <table class="table table-hover table-bordered">
        <div class="form-inline" >
          <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
          <!-- errors message -->
          <% if @category.errors.any? %>
            <%= @category.errors.full_messages.to_sentence %>
          <% end %>
          <% end %>
        </div>
        <br>

        <thead>
          <tr class="active">
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr class="success">
            <th scope="row"><%= category.name %></th>
            <td><%= link_to 'Edit', admin_categories_path(id: category.id) %>
                <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>